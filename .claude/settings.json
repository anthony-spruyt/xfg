  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "file_path=$(jq -r '.tool_input.file_path // .tool_input.notebook_path' < /dev/stdin); npx prettier --write \"$file_path\" 2>/dev/null || true"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "context7@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "code-review@claude-plugins-official": false,
    "hookify@claude-plugins-official": false,
    "hookify-plus@hookify-plus-fork": false,
    "hookify-plus@hookify-plus-local": true
  },
  "extraKnownMarketplaces": {}
}
